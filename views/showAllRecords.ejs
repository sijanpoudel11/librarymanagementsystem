<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
   
</head>

<body>
    <% if(records.length > 0){ %>
        <% if(!completed){ %>
            
        <ul style="margin-top: 20px;" class="nav nav-pills">
            <li class="active"  ><a href="#">Not Completed</a></li>
            <li><a href="/showAllRecords/completed">Completed</a></li>
          </ul>
          <%  }else{ %>
            <ul style="margin-top: 20px;" class="nav nav-pills">
                <li   ><a href="/showAllRecords">Not Completed</a></li>
                <li class="active" ><a href="#">Completed</a></li>
              </ul>
            <% } %>
            <hr>
            <div class="jumbotron"><table class="table table-hover">
        <thead>   <tr class=" bg-success">
            <th>Record id</th>
            <th>Book Tittle</th>
            <th>Book Author</th>
            <th>Member Name</th>
            <th>Member Address</th>
            <th>Member Contacts</th>
            <th>Member Evaluation</th>
            <% if(!completed){ %>
            <th>submission Deadline</th>
            <th></th>
            <th></th>
            <% } %>

        </tr></thead>

        <% records.forEach(function(record){ %>
        <tbody> <tr class="bg-success">
         <th scope="row">  <%= record._id %></th>
            <td class="table-active"><%= record.bookid.tittle  %></td>
            <td><%=  record.bookid.author  %></td>
            <td><%=  record.userid.name  %></td>
            <td><%=  record.userid.address  %></td>
            <td><%=  record.userid.contacts  %></td>
            <td><%=  record.userid.evaluation  %></td>
            <% if(!completed){ %>
            <td><%= record.submissionDeadline %></td>
            <td><%= record.deadlineExtended %></td>

            <td class="bg-success"><a href="/updateRecord/<%= record._id %>">update record</a></td>
                <% } %>
        </tr>
        <% }) %>
</tbody>
     


       

      
    </table></div>
 
   
  <% } %>


</body>

</html>