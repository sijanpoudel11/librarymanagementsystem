<!DOCTYPE html>
<html lang="en">
<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/css/datepicker.css" rel="stylesheet" type="text/css" />


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FORM</title>
    <div class="jumbotron">
        <form action="/issueNewBorrow" method="post">
            <label for="selectBook">Select a Book</label>
            <select name="selectBook" id="book">

                <% books.forEach(function(book){ %>
                <option value=<%= book._id %>> <%= book.author %> </option>
                <% }) %>

            </select>
            <hr>
            <label for="selectMember">Select Member</label>
            <select name="selectMember" id="member">

                <% members.forEach(function(member){ %>
                <option value=<%= member._id %>> <%= member.name %> </option>
                <% }) %>

            </select>
            <br>
            <hr>
            <label for="submissionDeadline">Submission Deadline</label>
            <div class="md-form">
                <input placeholder="Selected date" name="submissionDeadline" type="text" width="260" id="datepicker" class="form-control datepicker">
                
            </div>
            <button type="submit" class="btn btn-success">Proceed</button>

        </form>
    </div>


    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/js/bootstrap-datepicker.js"></script>
    <script>
        $('#datepicker').datepicker({
            language: "english",
            autoclose: true,
            todayHighlight: true
        }).datepicker('update', new Date());
    </script>
</head>

<body>

</body>

</html>